@{
    ViewData["Title"] = "Access Denied";
}

<center><img src="~/images/logo.png" width="500px"/></center><br />
@if(TempData["ErrorMessage"] != null){
    <div class="alert alert-dismissible fade show" role="alert" style="background-color: rebeccapurple;">
        <h4 class="text-light">@TempData["ErrorMessage"]</h4>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true" class="text-light">&times;</span>
        </button>
    </div>
}
