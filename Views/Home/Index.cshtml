@{
    ViewData["Title"] = "Home Page";
}

<html>
  <head>
    <!--Load the AJAX API-->
    <script type="text/javascript" src="/lib/googlechart/loader.js"></script>
 <script type="text/javascript">

      // Load Charts and the corechart package.
      google.charts.load('current', {'packages':['corechart']});

      // Draw the pie chart for Sarah's pizza when Charts is loaded.
      google.charts.setOnLoadCallback(drawSarahChart);

      // Draw the pie chart for the Anthony's pizza when Charts is loaded.
      google.charts.setOnLoadCallback(drawAnthonyChart);

      // Draw the pie chart for the Anthony's pizza when Charts is loaded.
      google.charts.setOnLoadCallback(drawColumnChart);

      // Callback that draws the pie chart for Sarah's pizza.
      function drawSarahChart() {

        // Create the data table for Sarah's pizza.
        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Topping');
        data.addColumn('number', 'Slices');
        data.addRows([
          ['Mushrooms', 1],
          ['Onions', 1],
          ['Olives', 2],
          ['Zucchini', 2],
          ['Pepperoni', 1]
        ]);

        // Set options for Sarah's pie chart.
        var options = {title:'How Much Pizza Sarah Ate Last Night',
                       width:220,
                       'legend':'bottom',
                       height:200};

        // Instantiate and draw the chart for Sarah's pizza.
        var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
        chart.draw(data, options);
      }

      // Callback that draws the pie chart for Anthony's pizza.
      function drawAnthonyChart() {

        // Create the data table for Anthony's pizza.
        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Topping');
        data.addColumn('number', 'Slices');
        data.addRows([
          ['Mushrooms', 2],
          ['Onions', 2],
          ['Olives', 2],
          ['Zucchini', 8],
          ['Pepperoni', 3]
        ]);

        // Set options for Anthony's pie chart.
        var options = {title:'How Much Pizza Anthony Ate Last Night',
                       width:230,
                       'legend': 'right',
                       height:190};

        // Instantiate and draw the chart for Anthony's pizza.
        var chart = new google.visualization.BarChart(document.getElementById('bar_chart'));
        chart.draw(data, options);
    }

      function drawColumnChart() {

        // Create the data table for Anthony's pizza.
        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Topping');
        data.addColumn('number', 'Slices');
        data.addRows([
          ['Mushrooms', 2],
          ['Onions', 2],
          ['Olives', 2],
          ['Zucchini', 8],
          ['Pepperoni', 3]
        ]);

        // Set options for Anthony's pie chart.
        var options = {title:'How Much Pizza Anthony Ate Last Night',
                       width:230,
                       'legend': 'right',
                       height:190};

        // Instantiate and draw the chart for Anthony's pizza.
        var chart = new google.visualization.ColumnChart(document.getElementById('column'));
        chart.draw(data, options);
    }
    </script>
  </head>
  <h2 class="text-center" style="color:rebeccapurple;">SUPERADMIN DASHBOARD</h2><br />
 <div class="row">
      <div class="col-md-4">
      <div class="card" style="border-radius:0px;">
          <div class="card-header" style="background-color:rebeccapurple; border-radius:0px;">
              <p class="text-light">Pie Chart</p>
          </div>
          <div class="card-body container">
              <div id="chart_div" style="max-width:250px;"></div>
          </div>
      </div>
  </div>
  <div class="col-md-8">
      <div class="card" style="border-radius:0px;">
          <div class="card-header" style="background-color:rebeccapurple; border-radius:0px;">
              <p class="text-light">Bar Chart</p>
          </div>
          <div class="container">
              <div id="bar_chart" class="card-body"></div>
          </div>
      </div>
  </div>
 </div><br />
 <div class="row">
      <div class="col-md-4">
      <div class="card" style="border-radius:0px;">
          <div class="card-header" style="background-color:rebeccapurple; border-radius:0px;">
              <p class="text-light">Column Chart</p>
          </div>
          <div class="card-body container">
              <div id="column" style="max-width:250px;"></div>
          </div>
      </div>
 </div>
</html>